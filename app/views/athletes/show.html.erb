<%= render @athlete %>

<%# afficher les posts images et videos de l'athlete
    reprendre pour avoir fonction qui selectionne image ou videos
 %>

<div class="container text-center p-2">

  <div class="btn-group mb-2" role="group" aria-label="Basic radio toggle button group">
    <input type="radio" class="btn-check" name="btnradio" id="btnradio1" autocomplete="off" checked>
    <label class="btn btn-outline-primary" for="btnradio1">image</label>

    <input type="radio" class="btn-check" name="btnradio" id="btnradio2" autocomplete="off">
    <label class="btn btn-outline-primary" for="btnradio2">video</label>
  </div>

  <div class="card">
    <div class="row">
      <% @athlete.posts.each do |post| %>
        <div class="col-md-3"> <!-- Adjust the column size as needed -->
           <%= image_tag post.media, class: "w-100 mb-2" %>
        </div>
      <% end %>
    </div>
  </div>

</div>

<% if appartenance_athlete(@athlete)  %>
   <%= link_to  new_campaign_path, class: "btn w-100 orange-bg-colored text-light my-2" do %>
     <i class="fa fa-plus"></i>
     <span> create campaign </span> 
   <% end %>
<% end %>


