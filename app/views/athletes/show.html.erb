<%= render @athlete %>

<%# afficher les posts images et videos de l'athlete
    reprendre pour avoir fonction qui selectionne image ou videos
 %>

<div class="container text-center p-2">

  <div class="row mb-2">
    <div class="col">
      <%= link_to url_for, class: "btn w-100 orange-bg-colored text-light my-2" do %>
        <i class="fa fa-image mx-1"></i>
        <span> images </span> 
      <% end %>
    </div>
    <div class="col">
      <%= link_to url_for, class: "btn w-100 text-secondary my-2" do %>
        <i class="fa fa-video mx-1"></i>
        <span> videos </span> 
      <% end %>
    </div>
  </div>
  
  <div class="card">
    <div class="row">
      <% @athlete.posts.each do |post| %>
        <div class="col-4"> <!-- Adjust the column size as needed -->
          <%= link_to post_path(post) do %>
            <%= image_tag post.media, class: "rounded w-100 mb-2" %>
          <% end %>        
        </div>
      <% end %>
    </div>
  </div>

</div>

<% if appartenance_athlete(@athlete)  %>
   <%= link_to  new_campaign_path, class: "btn w-100 orange-bg-colored text-light my-2" do %>
     <i class="fa fa-plus"></i>
     <span class="fw-bold"> create campaign </span> 
   <% end %>
<% end %>


