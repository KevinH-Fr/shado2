<div class='card mb-2 p-2'>
  <% if comment.deleted_at.present? %>
    <i>Comment has been deleted</i>
  <% else %>
   
    <%= simple_format(comment.body) %>
    <div class="d-flex align-items-center">
      <span class="me-2"> by </span> <%= link_to user_info(comment.user)[:name], user_info(comment.user)[:path], class: "no-underline fw-bold" %>

      <small class="ms-2"> <%= time_ago_in_words(comment.created_at) %> ago </small>
    </div>
    <div class="d-flex my-2 align-items-center">
      <%#= link_to "", comment, class: 'no-underline text-primary fa fa-eye me-2' %> 
      <%= button_to '', [@commentable, comment], method: :delete, class: "btn-no-style text-danger fa fa-trash me-2" %>

      <%= link_to new_comment_comment_path(comment), class: "no-underline me-2" do %>
        <i class="fa-regular fa-comment"></i>
        <span> <%= comment.comments.count %> </span>
      <% end %>

    
    </div>

  <% end %>
 
  <br>
  
  <%= render comment.comments %>


</div>