
<div class="d-flex justify-content-center">

  <div class="card card-connexion m-2 p-4 text-center light-beige-colored shadow-lg">

    <h2 class="my-4 fs-1">Log in</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "email...",
              class:"form-control my-2" %>
        <%= f.password_field :password, autocomplete: "current-password", placeholder: "password...",
              class:"form-control my-2" %>

      <div class="d-flex justify-content-center align-items-center my-2">
        <% if devise_mapping.rememberable? %>
          <div class="form-check form-switch">
            <%= f.check_box :remember_me, class: "form-check-input fs-5" %>
            <%= f.label :remember_me, "Remember me", class: "form-check-label fs-6" %>
          </div>
        <% end %>
      
      </div>

      <button type="submit" class="btn btn-lg btn-primary container-fluid my-4" data-turbo="false">
        <i class="fa-solid fa-xl fa-square-check"></i> 
        <span class="fw-bold ms-2"> Log in</span>
      </button>

    <% end %>

    <div class="my-4">
      <%= render "devise/shared/links" %>
    </div>

  </div>


</div>