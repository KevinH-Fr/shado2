<% @unread.each do |notification| %>
  <div class="container border d-flex align-items-center m-2 p-2">

    <%= link_to notification.to_notification.url, class:"no-underline" do %>
       <%= icon_notification(notification.type) %>
       <%= notification.to_notification.message %>
       <strong><%= notification.to_notification.user_name_label %></strong>
    <% end %>
  </div>
<% end %>

