
<div class="d-flex justify-content-evenly text-dark p-2">   
    <% if current_user.present? %>
        <%#= button_to "", destroy_user_session_path, method: :delete, 
            data: {turbo: "false"},
            class: "fa-solid fa-right-from-bracket btn btn-danger me-2"  %>
        <%#= current_user.email %>

        <%= link_to root_path, class: "btn btn-link" do %>
            <i class="fas fa-home orange-colored"></i>
            <div class="orange-colored">Let's Shado!</div>
        <% end %>

        <%= link_to user_path(current_user), class: "btn btn-link" do %>
            <i class="fas fa-user orange-colored"></i>
            <div class="orange-colored">Profile</div>
        <% end %>

        <%= link_to root_path, class: "btn btn-link" do %>
            <i class="fas fa-dashboard orange-colored"></i>
            <div class="orange-colored">Dashboard</div>
        <% end %>
        
        <%= link_to root_path, class: "btn btn-link" do %>
            <i class="fas fa-message orange-colored"></i>
            <div class="orange-colored">Chat</div>
        <% end %>   
    <% else %>
    
        <%= link_to '', new_user_session_path, class: "fa-solid fa-user-lock btn btn-warning mx-2" %>
        <%= link_to '', new_user_registration_path, class: "fa-solid fa-user-plus btn btn-primary" %>
    <% end %>  
</div>
