
<div class="d-flex text-center text-dark p-2">   
    <% if current_user.present? %>
        <%= button_to "", destroy_user_session_path, method: :delete, 
            data: {turbo: "false"},
            class: "fa-solid fa-right-from-bracket btn btn-danger me-2"  %>
        <%= current_user.email %>
    <% else %>
    
        <%= link_to '', new_user_session_path, class: "fa-solid fa-user-lock btn btn-warning mx-2" %>
        <%= link_to '', new_user_registration_path, class: "fa-solid fa-user-plus btn btn-primary" %>
    <% end %>  
</div>
