
<div class="d-flex justify-content-evenly text-dark p-2">   
    <% if current_user.present? %>

        <%= active_link_colored(root_path, "Let's Shado!", "home", 'pages', nil) %>

        <%# adapter propremenr pour type user %>
        <% if athlete_user %>   
            <%= active_link_colored(athlete_path(athlete_user), "Profile", "user", 'athletes', 'show') %>
            <%= active_link_colored(dashboard_athlete_index_path, "Dashboard", "dashboard", 'dashboard_athlete', nil) %>
        
        <% elsif fan_user %>
            <%= active_link_colored(fan_path(fan_user), "Profile", "user", 'fans', 'show') %>
        <% end %>

        <%= active_link_colored(rooms_path, "Chat", "message", 'rooms', 'index') %>

    <% else %>
    
        <%= link_to '', new_user_session_path, class: "fa-solid fa-user-lock btn btn-warning mx-2" %>
        <%= link_to '', new_user_registration_path, class: "fa-solid fa-user-plus btn btn-primary" %>
    <% end %>  
</div>


